public neor_glow(id)
{
	if (!is_user_alive(id)) return
	set_user_rendering(id, kRenderFxGlowShell, 0, 80, 0)
}
//----------------------------------------------------------------------------------------------
public neor_glow2(id)
{
	if (!is_user_alive(id)) return
	set_user_rendering(id, kRenderFxGlowShell, 50, 205, 50)
}
//----------------------------------------------------------------------------------------------
public neor_unglow(id)
{
	if (!is_user_alive(id)) return
	set_user_rendering(id)
}
