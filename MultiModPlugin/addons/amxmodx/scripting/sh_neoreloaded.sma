public neor_death()
{
	new id = read_data(2)

	if (HasNeor[id] && UsingNeor[id]) {
		NumOfNeos -= 1
		if (NumOfNeos == 0) {
			BulletTime = false
			neor_stopbullettime()
		}
	}

	gPlayerUltimateUsed[id] = false
	NeorTimer[id]= -1
	UsingNeor[id] = false
}
